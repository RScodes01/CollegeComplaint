<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Title/Heading for the Student Dashboard -->
    <TextView
        android:id="@+id/dashboardTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Student Dashboard"
        android:textSize="24sp"
        android:textStyle="bold"
        android:padding="16dp"
        android:gravity="center" />

    <!-- Button to Submit a New Complaint -->
    <Button
        android:id="@+id/submitComplaintButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Submit New Complaint" />

    <!-- Button to View Complaints -->
    <Button
        android:id="@+id/viewComplaintsButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="View Complaints"
        android:layout_marginTop="8dp" />

</LinearLayout>
