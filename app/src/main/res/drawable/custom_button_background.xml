<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Default button background (normal state) -->
    <item android:state_pressed="false">
        <shape
            android:shape="rectangle">
            <solid android:color="#3F51B5"/> <!-- Primary color -->
            <corners android:radius="20dp"/> <!-- Rounded corners -->
            <padding
                android:left="16dp"
                android:top="12dp"
                android:right="16dp"
                android:bottom="12dp"/>
        </shape>
    </item>

    <!-- Button background when pressed -->
    <item android:state_pressed="true">
        <shape
            android:shape="rectangle">
            <solid android:color="#303F9F"/> <!-- Darker primary color for pressed state -->
            <corners android:radius="20dp"/> <!-- Rounded corners -->
            <padding
                android:left="16dp"
                android:top="12dp"
                android:right="16dp"
                android:bottom="12dp"/>
        </shape>
    </item>
</selector>
